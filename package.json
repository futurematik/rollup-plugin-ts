{
  "name": "@fmtk/rollup-plugin-ts",
  "version": "0.1.2",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Gordon Leigh <gordon.leigh@futurematik.co.uk>",
  "repository": {
    "type": "git",
