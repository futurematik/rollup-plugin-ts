  },
  "peerDependencies": {
    "rollup": "*",
    "typescript": "^3.6.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/lodash.merge": "^4.6.6",
    "@types/mkdirp": "^0.5.2",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
